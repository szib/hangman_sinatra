<div id="main">

  <div id="image">
    <img src="images/<%= turns_left %>.jpg" alt="Hangman" height="450" width="600">
  </div>

  <div class="form">
    <form>
      <label>Guess a letter:</label>
      <input type="text" name="guess" autofocus="autofocus" />
      <input type="submit" value="OK" />
    </form>
  </div>

  <div id="word">
    <%= word %>
  </div>
  <div class="turns_left">
    <%= turns_left %>
    turns left
  </div>

  <div class="incorrect_letters">
    <h3>
      Incorrect letters
    </h3>
    <p>
      <%= incorrect_letters %>
    </p>
  </div>

  <% unless msg.nil? %>
    <div class="msg">
      <%= msg %>
    </div>
  <% end %>

</div>
